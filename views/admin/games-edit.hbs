{{#with create}}


<form method="post" action="/dashboard/{{_id}}/edit">
    
    <div id="add-all">
    <label for="title">Title</label>
    <input type="text" name="title" value="{{title}}" placeholder="Type an English title" />
    
    <label for="release">Release</label>
    <input type="text" name="release" value="{{release}}" placeholder="Date and publisher(s)" />
    
    <label for="description">Description</label>
    <textarea type="text" name="description" value="{{description}}"  placeholder="Summary of the games core plot etc."></textarea>
    
    <label for="metacritic">Metacritic</label>
    <input type="number" name="metacritic" value="{{metacritic}}"  placeholder="0-99" />
    
    <label for="image">Image</label>
    <input type="url" name="image" value="{{image}}"  placeholder="https://example.com" pattern="https://.*" required />
    
    <label for="title">Video</label>
    <input type="url" name="video" value="{{video}}"  placeholder="https://example.com" pattern="https://.*" required />
    
    <label for="genres">Genres</label>
    <select id="genres" name="genres" value="{{genres}}" multiple>
    <option value="" disabled>Select genre(s)</option>
    <option value="Platformer">Platformer</option>
    <option value="Action adventure">Action adventure</option>
    <option value="Metroidvania">Metroidvania</option>
    <option value="Beat'em up<">Beat'em up</option>
    </select>
   
    <label for="">Platforms</label>
    <div class="platforms">
    <div class="platform"><input type="checkbox" name="platforms" value="Nintendo switch">Nintendo Switch</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Playstation 5">Playstation 5</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Xbox Series S/X">Xbox Series S/X</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Playstation 4">Playstation 4</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Xbox One">Xbox One</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Playstation Vita">Playstation Vita</div>
    
    </div>
            <a href="/dashboard/{{_id}}">
            <button class="save">Back</button>
            </a>
            <a href="/dashboard/{{_id}}">
           <button class="save">Save changes</button>
            </a>

    </div>


</form>

{{/with}}




