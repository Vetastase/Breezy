
<form method="POST" action="/add">
<div id="add-all">
<!--<div id="add-games">-->
    <label for="title">Title</label>
    <input type="text" name="title" placeholder="Type an English title">
    
    <label for="release">Release</label>
    <input type="text" name="release" placeholder="Date and publisher(s)">
    
    <label for="description">Description</label>
    <textarea type="text" name="description" placeholder="Summary of the games core plot etc."></textarea>
    
    <label for="metacritic">Metacritic</label>
    <input type="number" name="metacritic" placeholder="0-99">
    
    <label for="title">Image</label>
    <input type="url" name="image" placeholder="https://example.com" pattern="https://.*" required>
    
    <label for="title">Video</label>
    <input type="url" name="video" placeholder="https://example.com" pattern="https://.*" required>
    
    <label for="title">Genres</label>
    <select id="genres" name="genres" multiple required>
    <option value="" disabled>Select genre(s)</option>
    <option value="Platformer">Platformer</option>
    <option value="Action Adventure">Action Adventure</option>
    <option value="Metroidvania">Metroidvania</option>
    <option value="Beat'em up">Beat'em up</option>
    <option value="Survival Horror">Survival Horror</option>
    <option value="Shooter">Shooter</option>
    <option value="Racing">Racing</option>
    <option value="Sports">Sports</option>
    </select>
   
    <!--<input type="text" name="genres">-->
    
    <!--Platforms<br>-->
    <label for="title">Platforms</label>
    <div class="platforms">
    <div class="platform"><input type="checkbox" name="platforms" value="Nintendo Switch">Nintendo Switch</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Playstation 5">Playstation 5</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Xbox Series S/X">Xbox Series S/X</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Playstation 4">Playstation 4</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Xbox One">Xbox One</div>
    <div class="platform"><input type="checkbox" name="platforms" value="Playstation Vita">Playstation Vita</div>
